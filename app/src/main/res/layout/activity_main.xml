<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bogdancristian.tictactoe.MainActivity">

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="565dp"
        android:background="@color/ForestGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnTwo"
            android:layout_alignEnd="@+id/btnTwo"
            android:layout_alignLeft="@+id/btnTwo"
            android:layout_alignRight="@+id/btnTwo"
            android:layout_alignStart="@+id/btnTwo"
            android:layout_marginBottom="29dp"
            android:backgroundTint="@color/Goldenrod"
            android:fontFamily="casual"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@string/btnOne" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnExit"
            android:layout_alignLeft="@+id/btnExit"
            android:layout_alignRight="@+id/btnExit"
            android:layout_alignStart="@+id/btnExit"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/Goldenrod"
            android:fontFamily="casual"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@string/btnTwo" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTwo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92dp"
            android:backgroundTint="@color/Goldenrod"
            android:fontFamily="casual"
            android:text="Button"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@string/exit" />

        <Button
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:background="@android:drawable/ic_lock_silent_mode_off"
            android:textSize="8sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
